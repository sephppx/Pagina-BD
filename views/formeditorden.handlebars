<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/files/css/formularioedit.css">
    </head>
    <body>

        <section>
            <div class="nav">

                <ul>
                    <li>
                        <a href="/">
                            <span class="icono"><ion-icon name="aperture-outline"></ion-icon></span>
                            <span class="titulo">Aura's</span>
                        </a>
                    </li>
                    <li>
                        <a href="/">
                            <span class="icono"><ion-icon name="home-outline"></ion-icon></span>
                            <span class="titulo">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Adminperfiles">
                            <span class="icono"><ion-icon name="people-outline"></ion-icon></span>
                            <span class="titulo">Clientes</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Adminprod">
                            <span class="icono"><ion-icon name="cart-outline"></ion-icon></span>
                            <span class="titulo">Productos</span>
                        </a>
                    </li>
                    <li>
                        <a href="/promocion">
                            <span class="icono"><ion-icon name="megaphone-outline"></ion-icon></span>
                            <span class="titulo">Promociones</span>
                        </a>
                    </li>
                    <li>
                        <a href="/consultas">
                            <span class="icono"><ion-icon name="information-circle-outline"></ion-icon></span>
                            <span class="titulo">Consultas</span>
                        </a>
                    </li>
                    <li>
                        <a href="/orden">
                            <span class="icono"><ion-icon name="clipboard-outline"></ion-icon></span>
                            <span class="titulo">Ordenes Compra</span>
                        </a>
                    </li>
                    <li>
                        <a href="/venta">
                            <span class="icono"><ion-icon name="bag-handle-outline"></ion-icon></span>
                            <span class="titulo">Ventas</span>
                        </a>
                    </li>
                    <li>
                        <a href="/devolucion">
                            <span class="icono"><ion-icon name="swap-horizontal-outline"></ion-icon></span>
                            <span class="titulo">Devoluciones</span>
                        </a>
                    </li>
                    <li>
                        <a href="/proveedor">
                            <span class="icono"><ion-icon name="log-out-outline"></ion-icon></span>
                            <span class="titulo">Proveedores</span>
                        </a>
                    </li>
                </ul>
            </div>
            
            <div class="container">
                <div class="topbar">
                    <div class="toggle">
                        <ion-icon name="menu"></ion-icon>
                    </div> 
                
                    <div class="buscar">
                        <label>
                            <input type="text" placeholder="Buscar..." name="" id="">
                            <ion-icon name="search"></ion-icon>
                        </label>
                    </div>
                    <div class="perfil-usuario">
                        <img src="/files/img/IMG/Sample_User_Icon.png" alt="">
                    </div>
                </div>
                <div class="detalles">
                    <div class="ordenes-recientes">
                        <div class="header">
                            <h2>Editar</h2>
                            <a href="/orden" class="boton">Atras</a>
                        </div>
                        <section class="form-product">
                            <form action="/formeditorden/orden/{{producto.ID_Orden}}" method="POST">
                                
                                <label for="Fecha">Fecha</label>
                                <input class="controls" type="date" id="Fecha" name="Fecha" value="{{producto.Fecha}}" required>
                                
                                <label for="Total">Total</label>
                                <input class="controls" type="number" id="Total" name="Total" value="{{producto.Total}}" required>
                                
                                <label for="ID_Proveedor">ID Proveedor</label>
                                <input class="controls" type="number" id="ID_Proveedor" name="ID_Proveedor" value="{{producto.ID_Proveedor}}">

                                <label for="Fecha_Entrega">Fecha entrega</label>
                                <input class="controls" type="date" id="Fecha_Entrega" name="Fecha_Entrega" value="{{producto.Fecha_Entrega}}" required>

                                <label for="Estado">Estado</label>
                                <input class="controls" id="Estado" name="Estado" value="{{producto.Estado}}" required>

                                <label for="fecha">Editar</label>
                                <input class="botons" type="submit" value="Modificar">

                            </form>
                        </section>                        
                    </div>
                </div>  
            </div>    
        </section>

        <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    </body>
</html>
