<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/files/css/formularioedit.css">
    </head>
    <body>

        <section>
            <div class="nav">

                <ul>
                    <li>
                        <a href="/">
                            <span class="icono"><ion-icon name="aperture-outline"></ion-icon></span>
                            <span class="titulo">Aura's</span>
                        </a>
                    </li>
                    <li>
                        <a href="/">
                            <span class="icono"><ion-icon name="home-outline"></ion-icon></span>
                            <span class="titulo">Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Adminperfiles">
                            <span class="icono"><ion-icon name="people-outline"></ion-icon></span>
                            <span class="titulo">Clientes</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Adminprod">
                            <span class="icono"><ion-icon name="cart-outline"></ion-icon></span>
                            <span class="titulo">Productos</span>
                        </a>
                    </li>
                    <li>
                        <a href="/consultas">
                            <span class="icono"><ion-icon name="information-circle-outline"></ion-icon></span>
                            <span class="titulo">Consultas</span>
                        </a>
                    </li>
                    <li>
                        <a href="/orden">
                            <span class="icono"><ion-icon name="clipboard-outline"></ion-icon></span>
                            <span class="titulo">Ordenes Compra</span>
                        </a>
                    </li>
                    <li>
                        <a href="/venta">
                            <span class="icono"><ion-icon name="bag-handle-outline"></ion-icon></span>
                            <span class="titulo">Ventas</span>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <span class="icono"><ion-icon name="settings-outline"></ion-icon></span>
                            <span class="titulo">Ajustes</span>
                        </a>
                    </li>
                    <li>
                        <a href="/logout">
                            <span class="icono"><ion-icon name="log-out-outline"></ion-icon></span>
                            <span class="titulo">Cerrar Sesion</span>
                        </a>
                    </li>
                </ul>
            </div>
            
            <div class="container">
                <div class="topbar">
                    <div class="toggle">
                        <ion-icon name="menu"></ion-icon>
                    </div> 
                
                    <div class="buscar">
                        <label>
                            <input type="text" placeholder="Buscar..." name="" id="">
                            <ion-icon name="search"></ion-icon>
                        </label>
                    </div>
                    <div class="perfil-usuario">
                        <img src="/files/img/IMG/Sample_User_Icon.png" alt="">
                    </div>
                </div>
                <div class="detalles">
                    <div class="ordenes-recientes">
                        <div class="header">
                            <h2>Editar</h2>
                            <a href="/Adminprod" class="boton">Atras</a>
                        </div>
                        <section class="form-product">
                            <form action="/formularioedit/producto/{{producto.ID_Producto}}" method="POST">
                                <label for="Nombre_Producto">Nombre del Producto</label>
                                <input class="controls" type="text" name="Nombre_Producto" id="Nombre_Producto" value="{{producto.Nombre_Producto}}" required>

                                <label for="Categoria">Categoría</label>
                                <input class="controls" type="text" name="Categoria" id="Categoria" value="{{producto.Categoria}}" required>

                                <label for="Precio">Precio</label>
                                <input class="controls" type="number" name="Precio" id="Precio" value="{{producto.Precio}}" step="0.01" required>

                                <label for="Stock">Stock</label>
                                <input class="controls" type="number" name="Stock" id="Stock" value="{{producto.Stock}}" required>

                                <label for="Descripcion">Descripción</label>
                                <input class="controls" name="Descripcion" id="Descripcion" value="{{producto.Descripcion}}"required>

                                <label for="ID_Proveedor">ID del Proveedor</label>
                                <input class="controls" type="number" name="ID_Proveedor" id="ID_Proveedor" value="{{producto.ID_Proveedor}}" readonly>

                                <label for="fecha">Editar</label>
                                <input class="botons" type="submit" value="Modificar">
                                </form>
                        </section>                        
                    </div>
                </div>  
            </div>    
        </section>

        <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
        <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>

    </body>
</html>
